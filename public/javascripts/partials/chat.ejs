<html>
<head>
	<title>Chat</title>
</head>
<body>
	<div class='container' ng-controller='chats'>
		<div class='row'>
			<div class='col-md-12'>
				<p class='text-center'><input class='btn btn-lg btn-primary' type='submit' value='Join Chatroom' ng-click='joinChat()'></p>
			</div>
		</div>
		
		<div class='chat'>
		</div>
		
		<div class='row'>
			<div class='col-md-12 chat_inputs'>
				<form ng-submit='sendMessage()'>
					<input type='text' placeholder='chat' ng-model='message' id='user_input'>
					<input type='submit' class='btn btn-md btn-danger'>
				</form>
			</div>
		</div>
	</div>
</body>
</html>